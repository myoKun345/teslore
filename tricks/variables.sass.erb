// Color Palette
$black: #161616
$black-desat: $black * 4
$blue: #0055DF
$brown: #70381A
$gold: #9A7D2E
$green: #155415
$grey: #C7C7C7
$mod-red: #AD1200
$orange: #FF4500
$red: #A72A2A
$red-desat: #7F1F1F
$white: #F5F5F5

// Font Kit
$code-set: "Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set: "Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set: "Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

// Wiki Variables
$size-wiki: 13px

// Textures Used
$texture: url(%%DarkTex%%)

// Header Image Information
$banner: url(%%Banner%%)
$bannerheight: 64px + 28px

// Image height + tab menu height. Changing tab menu height HAS DEPENDENCIES
$logo: url(%%Snoos%%)
$logoheight: 60px
$logowidth: 214px
$logooffset: 0px
$name: url(%%Realms%%)

// Versioning Information
$build_version: "<%= $build[:version] %>"
$build_host: "<%= $build[:host] %>"
$build_name: "<%= $build[:name] %>"
$build_time: "<%= $build[:time] %>"
$build_hash: "<%= $build[:hash][0...7] %>"
$build_hash_long: "<%= $build[:hash] %>"
$build_branch: "<%= $build[:branch] %>"

// Mixins

// Submit, Create Subreddit buttons
=create
  background:
    color: $black !important
    image: none !important
  border:
    style: none
    width: 0px
  height: 29px
  width: 300px
  vertical-align: middle
  z-index: 20
  div.nub
    display: none !important

//Subset of Create mixin
=create-link
  background
    color: $black
  color: $white
  font:
    family: $serif-set !important
    size: large
    weight: 400
  position: relative
  text:
    align: center
    transform: uppercase

// Link Formatting
=links
  a
    color: $red
  a:hover
    text-decoration: underline
  a:visited
    color: $red-desat

// Vote Arrows
=arrows
  div.arrow
    background:
      image: url(%%Arrows%%)
    height: 14px
    width: 15px
    &.up
      background:
        position: 0px 0px
    &.down
      background:
        position: 0px -15px
      display: none !important
    &.upmod
      background:
        position: -15px 0
    &.downmod
      background:
        position: -15px -15px

// Only a mixin because RES is a whore
=expando-buttons
  div.entry div.expando-button
    background:
      color: transparent
      image: url(%%expando%%)
    height: 16px
    width: 20px
    &.collapsed
      background-position: 6px -2px
      &:hover
        background-position: 6px -22px
    &.expanded
      background-position: -13px -2px
      &:hover
        background-position: -13px -22px
