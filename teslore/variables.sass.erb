// Color Palette
$black: #161616
$black-desat: #545454
$blue: #66B5FF
$brown: #70381a
$gold: #9a7d2e
$green: #155415
$grey: #c7c7c7
$orange: #FFA533
$red: #a72a2a
$red-desat: #7f1f1f
$white: whitesmoke

// Font Kit
$code-set: "Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set: "Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set: "Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

// Wiki Variables
$size-wiki: 13px

// Textures Used
$Arrows: url(%%Arrows%%)
$texture: url(%%DarkTex%%)
$T0: url(%%pixel-of-RES%%)
$T1: url(%%pixel-of-darkness%%)
$T2: url(%%pixel-of-truth%%)
$T3: url(%%pixel-of-valor%%)
$T4: url(%%pixel-of-light%%)

// Header Image Information
$banner: url(%%Banner%%)
$bannerheight: 64px + 28px  // Image height + tab menu height. Changing tab menu height HAS DEPENDENCIES
$logo: url(%%Snoos%%)
$logoheight: 60px
$logowidth: 214px
$logooffset: 0px
$name: url(%%Realms%%)

// Versioning Information
$build_version: "<%= $build[:version] %>"
$build_host: "<%= $build[:host] %>"
$build_name: "<%= $build[:name] %>"
$build_time: "<%= $build[:time] %>"
$build_hash: "<%= $build[:hash][0...7] %>"
$build_hash_long: "<%= $build[:hash] %>"
$build_branch: "<%= $build[:branch] %>"

// Mixins

// Submit, Create Subreddit buttons
=create
  background:
    color: $black !important
    image: none !important
  border:
    style: none
    width: 0px
  height: 29px
  width: 300px
  vertical-align: middle
  z-index: 20
  div.nub
    display: none !important

//Subset of Create mixin
=create-link
  background
    color: $black
  color: $white
  font:
    family: $serif-set !important
    size: large
    weight: 400
  position: relative
  text:
    align: center
    transform: uppercase

// Link Formatting
=links
  a
    color: $red
  a:hover
    text-decoration: underline
  a:visited
    color: $red-desat

// Vote Arrows
=arrows
  div.arrow
    background:
      image: $Arrows
    height: 14px
    width: 15px
    &.up
      background:
        position: 0px 0px
    &.down
      background:
        position: 0px -15px
      display: none !important
    &.upmod
      background:
        position: -15px 0
    &.downmod
      background:
        position: -15px -15px

// Only a mixin because RES is a whore
=expando-buttons
  div.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsed
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px -0px
      &:hover
        background:
          position: -46px -20px
  a.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsedExpando
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px 0px
      &:hover
        background:
          position: -46px -20px
