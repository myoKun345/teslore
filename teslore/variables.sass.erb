// Color Palette
$black:       #161616
$black-desat: #545454
$blue:        #0055DF
$blue-light:  #66B5FF
$brown:       #70381A
$gold:        #9A7D2E
$green:       #156915
$grey:        #C7C7C7
$mod-red:     #AD1200
$orange:      #FF4500
$red:         #A72A2A
$red-desat:   #7F1F1F
$white:       #F4F4F4

// Font Kit
$code-set: "Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set: "Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set: "Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

// Wiki Variables
$wiki-banner: url(%%BannerWiki%%)
$wiki-size: 13px

// Textures Used
$Arrows:      url(%%Arrows%%)             // Vote and Expando Arrows
$banner:      url(%%Banner%%)             // Header Banner
$FlairSheet:  url(%%FlairStandard%%)      // Flair List
$logo:        url(%%Snoos%%)              // reddit.com link and logo
$name:        url(%%Realms%%)             // /r/teslore link and logo
$texture:     url(%%DarkTex%%)            // 
$T0:          url(%%pixel-of-RES%%)       // 
$T1:          url(%%pixel-of-darkness%%)  // 
$T2:          url(%%pixel-of-truth%%)     // 
$T3:          url(%%pixel-of-valor%%)     // 
$T4:          url(%%pixel-of-light%%)     // 

// Header Image Information
$tabmenuheight: 28px                            // Height of tab menu. THIS HAS HEIGHT DEPENDENCIES IN /header/banner/tabmenu
$bannerheight: 64px                             // Height of banner image
$headerheight: $bannerheight+ $tabmenuheight    // Total height of div#header-banner-left
$logoheight: 60px                               // Height of reddit logo
$logowidth: 214px                               // Width of reddit logo
$logooffset: $bannerheight - $logoheight - 4px  // The -4px is for the Banner image, so Snoo appears to be resting on part of the texture.

// Versioning Information
$build_version: "<%= $build[:version] %>"
$build_host: "<%= $build[:host] %>"
$build_name: "<%= $build[:name] %>"
$build_time: "<%= $build[:time] %>"
$build_hash: "<%= $build[:hash][0...7] %>"
$build_hash_long: "<%= $build[:hash] %>"
$build_branch: "<%= $build[:branch] %>"

// Mixins

// Submit, Create Subreddit buttons
=create
  background:
    color: $black !important
    image: none !important
  border:
    style: none
    width: 0px
  height: 29px
  width: 300px
  vertical-align: middle
  z-index: 20
  div.nub
    display: none !important

//Subset of Create mixin
=create-link
  background
    color: $black
  color: $white
  font:
    family: $serif-set !important
    size: large
    weight: 400
  position: relative
  text:
    align: center
    transform: uppercase

// Link Formatting
=links
  a
    color: $red
  a:hover
    text-decoration: underline
  a:visited
    color: $red-desat

// Vote Arrows
=arrows
  div.arrow
    background:
      image: $Arrows
    height: 14px
    width: 15px
    &.up
      background:
        position: 0px 0px
    &.down
      background:
        position: 0px -15px
      display: none !important
    &.upmod
      background:
        position: -15px 0
    &.downmod
      background:
        position: -15px -15px

// Only a mixin because RES is a whore
=expando-buttons
  div.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsed
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px -0px
      &:hover
        background:
          position: -46px -20px
  a.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsedExpando
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px 0px
      &:hover
        background:
          position: -46px -20px
