//	Color Palette
$black:			#161616
$black-desat:	#545454
$blue:			#0055DF
$blue-light:	#66B5FF
$brown:			#70381A
$gold:			#9A7D2E
$green:			#156915
$grey:			#C7C7C7
$mod-red:		#AD1200
$orange:		#FF4500
$parchment:		#E9DDC0
$red:			#A72A2A
$red-desat:		#7F1F1F
$white:			#F4F4F4

//	Font Kit
$code-set:			"Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set:	"Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set:			"Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

//	Textures Used
$arrows:		url(%%Arrows%%)
$banner:		url(%%BannerC0DA-2%%)
$calendar:		url(%%Cal4E204%%)
$FlairSheet:	url(%%FlairStandard%%)
$logo:			url(%%SnoosBigInverse%%)
$name:			url(%%Realms%%)
$texture:		url(%%DarkTex%%)
$T0:			url(%%pixel-of-RES%%)
$T1:			url(%%pixel-of-darkness%%)
$T2:			url(%%pixel-of-truth%%)
$T3:			url(%%pixel-of-valor%%)
$T4:			url(%%pixel-of-light%%)

//	Header Image Information
$tabmenuheight:	49px
$bannerheight:	150px
$headerheight:	$bannerheight + $tabmenuheight
$logoheight:	79px
$logowidth:		282px
$logooffset:	17px
$noticeheight:	53px

//	Wiki Variables
$wiki-banner:		url(%%BannerWiki%%)
$wiki-bannerheight:	$bannerheight
$wiki-size:			13px

//	Versioning Information
$build_version:		"<%= $build[:version] %>"
$build_host:		"<%= $build[:host] %>"
$build_name:		"<%= $build[:name] %>"
$build_time:		"<%= $build[:time] %>"
$build_hash:		"<%= $build[:hash][0...7] %>"
$build_hash_long:	"<%= $build[:hash] %>"
$build_branch:	"<%= $build[:branch] %>"

//	Mixins
=create
	background:
		color:	$black !important
		image:	none !important
	border:
		style:	none
	height:	29px
	width:	300px
	vertical-align:	middle
	div.nub
		display:	none !important
=create-link
	background
		color:	$black
	color:	$white
	font:
		family:	$serif-set !important
		size:	large
		weight:	400
	position:	relative
	text:
		align:		center
		transform:	uppercase
=links
	a
		color:	$red
		&:hover
			text:
				decoration:	underline
		&:visited
			color:	$red-desat
=arrows
	div.arrow
		background:
			image:	$arrows
		height:	14px
		width:	15px
		&.up
			background:
				position:	0 0
		&.down
			background:
				position:	0 -15px
			display:	none !important
		&.upmod
			background:
				position:	-15px 0
		&.downmod
			background:
				position:	-15px -15px
=expando-buttons
	*.expando-button
		background:
			color:	transparent
			image:	$arrows
		margin:	0
		height:	20px
		width:	16px
		&.collapsed,
		&.collapsedExpando
			background:
				position:	-30px 0
			&:hover
				background:
					position:	-30px -20px
		&.expanded
			background:
				position:	-46px 0
			&:hover
				background:
					position:	-46px -20px
