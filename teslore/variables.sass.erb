// Versioning Information
$build_version: "<%= $build[:version] %>"
$build_host: "<%= $build[:host] %>"
$build_name: "<%= $build[:name] %>"
$build_time: "<%= $build[:time] %>"
$build_hash: "<%= $build[:hash][0...7] %>"
$build_hash_long: "<%= $build[:hash] %>"
$build_branch: "<%= $build[:branch] %>"

// Mixins

// Submit, Create Subreddit buttons
=create
  background:
    color: $black !important
    image: none !important
  border:
    style: none
    width: 0px
  height: 29px
  width: 300px
  vertical-align: middle
  z-index: 20
  div.nub
    display: none !important

//Subset of Create mixin
=create-link
  background
    color: $black
  color: $white
  font:
    family: $serif-set !important
    size: large
    weight: 400
  position: relative
  text:
    align: center
    transform: uppercase

// Link Formatting
=links
  a
    color: $red
  a:hover
    text-decoration: underline
  a:visited
    color: $red-desat

// Vote Arrows
=arrows
  div.arrow
    background:
      image: $Arrows
    height: 14px
    width: 15px
    &.up
      background:
        position: 0px 0px
    &.down
      background:
        position: 0px -15px
      display: none !important
    &.upmod
      background:
        position: -15px 0
    &.downmod
      background:
        position: -15px -15px

// Only a mixin because RES is a whore
=expando-buttons
  div.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsed
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px -0px
      &:hover
        background:
          position: -46px -20px
  a.expando-button
    background:
      color: transparent
      image: $Arrows
    height: 20px
    width: 16px
    &.collapsedExpando
      background:
        position: -30px 0px
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px 0px
      &:hover
        background:
          position: -46px -20px
