// Color Palette
$black:       #161616
$black-desat: #545454
$blue:        #0055DF
$blue-light:  #66B5FF
$brown:       #70381A
$gold:        #9A7D2E
$green:       #156915
$grey:        #C7C7C7
$mod-red:     #AD1200
$orange:      #FF4500
$red:         #A72A2A
$red-desat:   #7F1F1F
$white:       #F4F4F4

// Font Kit
$code-set:        "Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set:  "Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set:       "Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

// Wiki Variables
$wiki-banner: url(%%BannerWiki%%)
$wiki-size: 13px

// Textures Used
$arrows:      url(%%Arrows%%)                             // Vote and Expando Arrows
$banner:      url(%%Banner%%)                             // Header Banner
$FlairSheet:  url(%%FlairStandard%%)                      // Flair List
$logo:        url(%%Snoos%%)                              // reddit.com link and logo
$name:        url(%%Realms%%)                             // /r/teslore link and logo
$texture:     url(%%DarkTex%%)                            // so far we just have one texture
$T0:          url(%%pixel-of-RES%%)                       // until honestbleeps makes RES more useful, this is needed
$T1:          url(%%pixel-of-darkness%%)                  // SAC named these
$T2:          url(%%pixel-of-truth%%)                     // 
$T3:          url(%%pixel-of-valor%%)                     // 
$T4:          url(%%pixel-of-light%%)                     // 

// Header Image Information
$tabmenuheight: 49px                                      // Height of tab menu. THIS HAS HEIGHT DEPENDENCIES IN /header/banner/tabmenu
$bannerheight:  64px                                      // Height of banner image
$headerheight:  $bannerheight+ $tabmenuheight             // Total height of div#header-banner-left
$logoheight:    60px                                      // Height of reddit logo
$logowidth:     214px                                     // Width of reddit logo
$logooffset:    $bannerheight - $logoheight - 4px         // The -4px is for the Banner image, so Snoo appears to be resting on part of the texture.

// Versioning Information
$build_version: "<%= $build[:version] %>"
$build_host: "<%= $build[:host] %>"
$build_name: "<%= $build[:name] %>"
$build_time: "<%= $build[:time] %>"
$build_hash: "<%= $build[:hash][0...7] %>"
$build_hash_long: "<%= $build[:hash] %>"
$build_branch: "<%= $build[:branch] %>"

// Mixins
=create                                                   // Submit, Create Subreddit buttons
  background:
    color: $black !important
    image: none !important
  border:
    style: none
  height: 29px
  width: 300px
  vertical-align: middle
  div.nub
    display: none !important
=create-link                                              //Subset of Create mixin
  background
    color: $black
  color: $white
  font:
    family: $serif-set !important
    size: large
    weight: 400
  position: relative
  text:
    align: center
    transform: uppercase
=links                                                    // Link Formatting
  a
    color: $red
    &:hover
      text:
        decoration: underline
    &:visited
      color: $red-desat
=arrows                                                   // Vote Arrows
  div.arrow
    background:
      image: $arrows
    height: 14px
    width: 15px
    &.up
      background:
        position: 0 0
    &.down
      background:
        position: 0 -15px
      display: none !important
    &.upmod
      background:
        position: -15px 0
    &.downmod
      background:
        position: -15px -15px
=expando-buttons                                          // Only a mixin because RES is a whore
  *.expando-button
    background:
      color: transparent
      image: $arrows
    margin: 0
    height: 20px
    width: 16px
    &.collapsedExpando
      background:
        position: -30px 0
      &:hover
        background:
          position: -30px -20px
    &.expanded
      background:
        position: -46px 0
      &:hover
        background:
          position: -46px -20px
